@model VentaCarProyectoFinal.AppWebMVC.Models.Vendedore

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg p-3 mb-5" style="background-color: #e0f2f7; border: 1px solid #b0e0e6; border-radius: 10px;">
            <div class="card-body">
                <h2 class="card-title text-center mb-4" style="color: #4a6572;">Iniciar Sesión</h2>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label" style="color: #4a6572;">Correo Electrónico</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label" style="color: #4a6572;">Contraseña</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                       
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>

                    <div class="form-group d-grid mt-3">
                        <a asp-controller="Vendedores" asp-action="Registro" class="btn btn-success btn-lg">
                            <i class="fas fa-user-plus"></i> Registrarse
                        </a>
                    </div>
                    <div class="text-center mt-3">
                        <a href="#" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
