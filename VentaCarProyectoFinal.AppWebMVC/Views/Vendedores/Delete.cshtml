@model VentaCarProyectoFinal.AppWebMVC.Models.Vendedore
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <!-- Encabezado centrado y estilizado -->
    <h1 class="text-center text-primary display-5">Eliminar Vendedor</h1>
    <h3 class="text-center text-danger">¿Estás seguro de que deseas eliminar este Vendedor?</h3>

    <div class="container d-flex justify-content-center">
        <div class="card shadow-lg p-4 w-50">
            <div class="card-body">
                <h4 class="text-center">Detalles del Vendedor:</h4>
                <hr />

                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="w-25 bg-light">@Html.DisplayNameFor(model => model.Nombre)</th>
                            <td>@Html.DisplayFor(model => model.Nombre)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Apellido)</th>
                            <td>@Html.DisplayFor(model => model.Apellido)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Telefono)</th>
                            <td>@Html.DisplayFor(model => model.Telefono)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Direccion)</th>
                            <td>@Html.DisplayFor(model => model.Direccion)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Email)</th>
                            <td>@Html.DisplayFor(model => model.Email)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Dui)</th>
                            <td>@Html.DisplayFor(model => model.Dui)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Password)</th>
                            <td>@Html.DisplayFor(model => model.Password)</td>
                        </tr>
                        <tr>
                            <th class="bg-light">@Html.DisplayNameFor(model => model.Role)</th>
                            <td>@Html.DisplayFor(model => model.Role)</td>
                        </tr>
                    </tbody>
                </table>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-3">
                        <input type="submit" value="Eliminar" class="btn btn-danger px-4 rounded-pill" />
                        <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>