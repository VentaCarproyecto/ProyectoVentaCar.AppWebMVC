@model VentaCarProyectoFinal.AppWebMVC.Models.Vendedore

@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="container mt-4 d-flex justify-content-center">
    <!-- Contenedor con fondo blanco reducido -->
    <div class="p-4" style="background-color: #fff; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); max-width: 500px; width: 100%;">
        <!-- Encabezado estilizado -->
        <h1 class="text-center text-primary">Registro de nuevo Vendedor.</h1>
        <hr />

        <form asp-action="Registro" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-bold">Correo Electrónico</label>
                <input asp-for="Email" class="form-control" placeholder="Ingrese su correo" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese su nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Apellido" class="form-label fw-bold">Apellido</label>
                <input asp-for="Apellido" class="form-control" placeholder="Ingrese su apellido" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                <input asp-for="Telefono" class="form-control" placeholder="Ingrese su teléfono" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Dui" class="form-label fw-bold">DUI</label>
                <input asp-for="Dui" class="form-control" placeholder="Ingrese su DUI" />
                <span asp-validation-for="Dui" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Direccion" class="form-label fw-bold">Dirección</label>
                <input asp-for="Direccion" class="form-control" placeholder="Ingrese su dirección" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label fw-bold">Contraseña</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Ingrese su contraseña" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Role" value="VENDEDOR" />

            <div class="form-group text-center mt-3">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-user-plus"></i> Registrarse
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" class="btn btn-link">¿Ya tienes una cuenta? Inicia sesión</a>
        </div>
    </div>
</div>
