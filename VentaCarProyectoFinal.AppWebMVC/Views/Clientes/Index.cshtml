@model IEnumerable<VentaCarProyectoFinal.AppWebMVC.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mt-4">Registro de Clientes.</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Cliente</a>
</p>

<div class="container d-flex justify-content-start">
    <div class="w-75">
        <table class="table table-striped table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th class="px-3"> @Html.DisplayNameFor(model => model.Nombre) </th>
                    <th class="px-3"> @Html.DisplayNameFor(model => model.Apellido) </th>
                    <th class="px-3"> @Html.DisplayNameFor(model => model.Telefono) </th>
                    <th class="px-3"> @Html.DisplayNameFor(model => model.Direccion) </th>
                    <th class="px-3"> @Html.DisplayNameFor(model => model.Correo) </th>
                    <th class="px-3"> @Html.DisplayNameFor(model => model.Dui) </th>
                    <th class="px-3"> @Html.DisplayNameFor(model => model.Password) </th>
                    <th class="px-3 text-nowrap">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-3">@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td class="px-3">@Html.DisplayFor(modelItem => item.Apellido)</td>
                        <td class="px-3">@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td class="px-3">@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td class="px-3">@Html.DisplayFor(modelItem => item.Correo)</td>
                        <td class="px-3">@Html.DisplayFor(modelItem => item.Dui)</td>
                        <td class="px-3">@Html.DisplayFor(modelItem => item.Password)</td>
                        <td class="px-3 text-nowrap">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white me-1">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



