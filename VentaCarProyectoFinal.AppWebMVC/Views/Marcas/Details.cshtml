@model VentaCarProyectoFinal.AppWebMVC.Models.Marca

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <!-- Encabezado centrado y estilizado -->
    <h1 class="text-center text-primary display-5">Detalles de la Marca</h1>

    <div class="container d-flex justify-content-center">
        <div class="card shadow-lg p-4 w-50">
            <div class="card-body">
                <h4 class="text-center">Marca:</h4>
                <hr />

                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="w-25 bg-light">@Html.DisplayNameFor(model => model.Marca1)</th>
                            <td>@Html.DisplayFor(model => model.Marca1)</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-4 rounded-pill">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>
