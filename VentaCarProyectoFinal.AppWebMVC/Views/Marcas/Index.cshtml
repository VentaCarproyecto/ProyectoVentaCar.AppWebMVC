@model IEnumerable<VentaCarProyectoFinal.AppWebMVC.Models.Marca>

@{
    ViewData["Title"] = "Index";
}


<h1 class="text-center text-primary">Buscar Marcas</h1>

<form asp-action="Index" class="container my-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <div class="form-group">
                <label class="form-label fw-bold text-secondary">Marca</label>
                <input type="text" name="Marca1" class="form-control border-primary rounded" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="form-label fw-bold text-secondary">Cant. Registros a mostrar.</label>
                <select name="topRegistro" class="form-select border-primary rounded">
                    <option selected value="10">10</option>
                    <option value="20">20</option>
                    <option value="60">60</option>
                    <option value="100">100</option>
                    <option value="500">500</option>
                    <option value="1000">1000</option>
                    <option value="0">Todos</option>
                </select>
            </div>
        </div>
        <div class="col-md-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Buscar</button>
            <a class="btn btn-success" asp-action="Create">Ir a crear</a>
        </div>
    </div>
</form>
<hr class="text-primary" />

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Marca1)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Marca1)</td>
                <td class="px-3 text-nowrap d-flex align-items-center justify-content-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-1">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white me-1">
                        <i class="bi bi-info-circle"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function() {

             $('#myTable').DataTable({
               "language":languageTable
             });
        });
    </script>

}

