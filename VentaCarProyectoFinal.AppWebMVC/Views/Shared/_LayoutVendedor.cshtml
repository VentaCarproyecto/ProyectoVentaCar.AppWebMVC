<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VentaCarProyectoFinal.AppWebMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VentaCarProyectoFinal.AppWebMVC.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"> <!--Link de icono de boostrap-->

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <!-- Marca -->
                <a class="navbar-brand fw-bold text-light" asp-area="" asp-controller="Vendedores" asp-action="InicioVista">
                    VentaCar
                </a>

                <!-- Botón para pantallas pequeñas -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú -->
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="*" asp-action="*">
                                <i class="bi bi-house-door-fill"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="*" asp-action="*">
                                <i class="bi bi-car-front-fill"></i> Crear oferta Vehículo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="*" asp-action="*">
                                <i class="bi bi-tools"></i> Crear publicación de repuesto
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="*" asp-action="*">
                                <i class="bi bi-clock-history"></i> Historial
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="*" asp-action="*">
                                <i class="bi bi-toggle-on"></i> Activos e Inactivos
                            </a>
                        </li>
                    </ul>

                    <!-- Si el usuario ha iniciado sesión -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-light dropdown-toggle px-4 rounded-pill" type="button" id="userDropdown"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Vendedores" asp-action="CerrarSession">Cerrar Sesión</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- Si el usuario NO ha iniciado sesión -->
                        <div class="dropdown">
                            <button class="btn btn-outline-light dropdown-toggle px-4 rounded-pill" type="button" id="loginDropdown"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                Iniciar Sesión
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="loginDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Clientes" asp-action="Login">Iniciar sesión como Cliente</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Vendedores" asp-action="Login">Iniciar sesión como Vendedor</a></li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - VentaCarProyectoFinal.AppWebMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

